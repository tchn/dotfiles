set_default() {
    # set -o errexit
    set -o nounset
    # set -o pipefail
}

if_exists() {
    local fname="$1"
    set_default
    if [ -e "$fname" ]; then
        return 0
    else
        return 1
    fi
}

synergys_start() {
    set_default
    # conf="$1"
    synergys -f --config "${1:-${HOME}/.synergy.conf}"
}

synergyc_connect() {
    set_default
    srv="$1"
    ssh -p "${2:-22}" -f -N -L 24800:"$1":24800 "$1"
    synergyc -f localhost
}

